while(<STDIN>) {
    s/^\.if\s+defined\(([^\)]+)\)/.IF "\${$1}" != ""/;
    s/^\.if(\s+)/.IF$1/;
    s/^\.else(\s+)/.ELSE$1/;
    s/^\.endif(\s+)/.ENDIF$1/;
    print;
}

__END__
