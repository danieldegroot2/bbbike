use FindBin;
use lib ("$FindBin::RealBin/..", "$FindBin::RealBin/../lib");
use Strassen;

unshift(@Strassen::datadirs, "$FindBin::RealBin/../data");

my @files = @ARGV;
die "File?" if !@files;

foreach $file (@files) {
    my $obj = new Strassen $file;
    die "Can't create obj for $file" if !$obj;
    push @obj, $obj;
}

$o = new MultiStrassen @obj;

$o->init;
while(1) {
    my $r = $o->next;
    last if !@{$r->[1]};
    $h{$r->[0]}++;
}

while(my($k,$v) = each %h) {
    if ($v > 1) {
	push @double, $k;
    }
}

if (@double) {
    print join("\n", map { "$_\t$h{$_}" } sort @double), "\n";
    exit 1;
}
